@model ASM2.Models.ApplicationUser
@{
    ViewBag.Title = "EditTrainee";
    Layout = "~/Views/Admin/_LayoutPageAdmin.cshtml";
}
@if (!ViewData.ModelState.IsValid)
{
    @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })

}
<style>
    .Student {
        display: none
    }

    .Teacher {
        display: none
    }
</style>
@using (Html.BeginForm(FormMethod.Post))
{
    <div class="row mt-2">
       
        <div class="col-8">
            <form>

                <h2>Edit person</h2>
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.UserName)
                @Html.HiddenFor(m => m.Email)
                @Html.HiddenFor(m => m.Telephone)
                @Html.HiddenFor(m => m.Type)
                @Html.HiddenFor(m => m.WorkingPlace)
                @Html.HiddenFor(m => m.PasswordHash)
                @Html.HiddenFor(m => m.SecurityStamp)
                @Html.HiddenFor(m => m.WorkingPlace)
                @Html.HiddenFor(m => m.Role)
                <div class="form-group">

                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                
                
                <div class="form-group">

                    @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                <button type="submit" class="btn btn-primary mb-2">Update</button>

            </form>
        </div>
    </div>

}
<script>
    $(document).ready(function () {


        if ($('#Role').val() == 'Trainer') {
            $('.Teacher').css('display', 'none');
            $('.Student').css('display', 'block');
            $('.Staff').css('display', 'none');
        }
        else if ($('#Role').val() == 'Trainee') {
            $('.Teacher').css('display', 'block');
            $('.Student').css('display', 'none');
            $('.Staff').css('display', 'none');
        }
        else if ($('#Role').val() == 'Staff') {
            $('.Teacher').css('display', 'none');
            $('.Student').css('display', 'none');
            $('.Staff').css('display', 'block');
        }
    });
</script>