@model ASM2.Models.ApplicationUser
@{
    ViewBag.Title = "CreateTrainee";
    Layout = "~/Views/Staff/_LayoutPageStaff.cshtml";
}
@if (!ViewData.ModelState.IsValid)
{
    @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })

}
<style>
    
    .Teacher {
        display: none
    }
</style>
@using (Html.BeginForm(FormMethod.Post))
{
    <div class="row mt-2">
        
        <div class="col-8">
            <form>

                <h2>Add new Trainee</h2>
                
               
                <div class="form-group ">
                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "font-weight-bold" })*
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                @Html.HiddenFor(m => m.Role, htmlAttributes: new { @class = "Role" })
                
            <div class="form-group Student">

                @Html.LabelFor(m => m.Education, htmlAttributes: new { @class = "font-weight-bold" })*
                @Html.EditorFor(m => m.Education, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group Student">

                @Html.LabelFor(m => m.DOB, htmlAttributes: new { @class = "font-weight-bold" })*
                @Html.EditorFor(m => m.DOB, new { htmlAttributes = new { @class = "form-control DOB", type = "date" } })

            </div>
            <div class="form-group Student">

                @Html.LabelFor(m => m.Age, htmlAttributes: new { @class = "font-weight-bold" })*
                @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control", type = "number" } })

            </div>
            <div class="form-group Student">

                @Html.LabelFor(m => m.Department, htmlAttributes: new { @class = "font-weight-bold" })*
                @Html.EditorFor(m => m.Department, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group Student">

                @Html.LabelFor(m => m.TOEIC, htmlAttributes: new { @class = "font-weight-bold" })*
                @Html.EditorFor(m => m.TOEIC, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group Student">

                @Html.LabelFor(m => m.Location, htmlAttributes: new { @class = "font-weight-bold" })*
                @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })

            </div>
                <div class="form-group Teacher">

                    @Html.LabelFor(m => m.Telephone, htmlAttributes: new { @class = "font-weight-bold" })*
                    @Html.EditorFor(m => m.Telephone, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "font-weight-bold" })*
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @type="email" } })

                </div>
                <div class="form-group Teacher">

                    @Html.LabelFor(m => m.Type, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.Type, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <div class="form-group Teacher">
                    @Html.LabelFor(m => m.WorkingPlace, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.WorkingPlace, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                
                
                <button type="submit" class="btn btn-primary mb-2">ADD</button>

            </form>
        </div>
    </div>

}
<script>
    
    
        $('#Role').val('Trainee');
        $('.Role').val('Trainee');

    
    
</script>