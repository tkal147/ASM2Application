@model IEnumerable<ASM2.Models.FPT.Course>
@{
    ViewBag.Title = "ViewAllCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">
    @Html.Partial("_LinkLeft")
    <div class="col-8">
        <form>
            <h2>View Course</h2>

            @foreach (var a in Model)
            {
                <div class="item p-3">
                    <div class="form-group">


                        <div style="display:flex;" class="mb-3">
                            @Html.EditorFor(model => a.Name, new { htmlAttributes = new { @class = " form-control line-1", disabled = "disabled" , style ="width:50%"} })
                            @Html.EditorFor(model => a.Descrpitipon, new { htmlAttributes = new { @class = "form-control line-1", disabled = "disabled", style = "width:49%" } })
                        </div>
                        <a href="@Url.Action("EditCourse", new {id = a.Id })">
                            <button type="button" class="btn btn-primary mb-2">View detail</button>
                        </a>


                        <a href="@Url.Action("DeleteCourse", new {id = a.Id })">
                            <button type="button" class="btn btn-primary mb-2">Delete</button>
                        </a>

                    </div>
                </div>
            }

        </form>
    </div>
</div>


