@model ASM2.Models.ApplicationUser
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Trainer/_LayoutPageTrainer.cshtml";
}
@if (!ViewData.ModelState.IsValid)
{
    @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })

}

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="row mt-2">

        <div class="col-8">
            <form>

                <h2>Edit Profile</h2>
                @Html.HiddenFor(m => m.Id)
                <div class="form-group ">
                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                @Html.HiddenFor(m => m.Role)

                <div class="form-group Student">

                    @Html.LabelFor(m => m.Telephone, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.Telephone, new { htmlAttributes = new { @class = "form-control", type = "number" } })

                </div>
                <div class="form-group Student">

                    @Html.LabelFor(m => m.Type, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.Type, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <div class="form-group Student">

                    @Html.LabelFor(m => m.WorkingPlace, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.WorkingPlace, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                
                <div class="form-group">

                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })

                </div>

                @Html.HiddenFor(m => m.UserName)

                <button type="submit" class="btn btn-primary mb-2">Update</button>

            </form>
        </div>
    </div>

}
